extends layout

block content
  script(src="/javascripts/delete-account.js")
  
  h2 Settings
  p.error #{error_text}
  h3 Change Password
  form(name="password", method="post", action="/password")
    table
      tr
        td
          span.label Old Password:
        td
          input(type="password", name="old")
      tr
        td
          span.label New Password:
        td
          input(type="password", name="new1")
      tr
        td
          span.label Repeat New Password:
        td
          input(type="password", name="new2")
      tr
        td
        td
          input(type="submit", value="Update")
  
  h3 Sessions
  form(name="logout", action="/logout")
    input(type="submit", value="Logout")
  br
  table(cellpadding="5px")
    thead
      tr
        th Key
        th Last Accessed
        th Description
        th Delete
    tbody
      each key in keys
        tr.row
          td= key.session_key
          td= key.last_accessed
          td= key.description
          td
            a(href="/rmsession?key=#{key.session_key}") Delete
  
  h3 Delete Account
  form(name="delete", action="javascript:deleteAccount()")
    input(type="submit", value="Delete Account")