extends layout

block content
  h2 Add Entry
  p.error #{error_text}
  form(name="add", method="post")
    table
      tr
        td
          span.label Date:
        td
          input(type="text", name="date", value="#{q.date || ''}")
      tr
        td
          span.label Title:
        td
          input(type="text", name="title", value="#{q.title || ''}")
      tr
        td
          span.label Location:
        td
          input(type="text", list="locations", name="location", autocomplete="off", value="#{q.location || ''}")
          datalist(id="locations")
            each location in locations
              option(value="#{location.location}")
      tr
        td
          span.label Account:
        td
          input(type="text", list="accounts", name="account", autocomplete="off", value="#{q.account || ''}")
          datalist(id="accounts")
            each account in accounts
              option(value="#{account.name}")
      tr
        td
          span.label From:
        td
          input(type="text", list="accounts", name="transfer", value="#{q.transfer || ''}")
      tr
        td
          span.label Amount:
        td
          input(type="number", step="0.01", name="amount", value="#{q.amount || ''}")
      tr
        td
          span.label Category:
        td
          input(type="text", list="categories", name="category", autocomplete="off", value="#{q.category || ''}")
          datalist(id="categories")
            each category in categories
              option(value="#{category.category}")
      tr
        td
          span.label Note:
        td
          input(type="text", name="note", value="#{q.note || ''}")
      tr
        td
        td
          input(type="submit", value="Add")
          input(type="checkbox", name="keep") 
          label(for="keep") Keep